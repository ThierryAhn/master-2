@using NorthWind.Models
@model Employee
@{    
    ViewBag.Title = "Details";
}

<h2>Details de l'employee</h2>

<table>
    <tr>
        <td>Id :</td>
        <td>@Model.EmployeeID</td>
    </tr>
    <tr>
        <td>Nom :</td>
        <td>@Model.LastName</td>
    </tr>
    <tr>
        <td>Prénom :</td>
        <td>@Model.FirstName</td>
    </tr>
        <tr>
        <td>image :</td>
        <td>
            <img src='@Url.Action( "GetImage", "Employee", new { id = Model.EmployeeID } )' />
        </td>
    </tr>
</table>