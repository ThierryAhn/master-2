@using NorthWind.Models
@model Order
@{    
    ViewBag.Title = "Details";
}

<h2>Detail de la commande</h2>
<table>
    <tr>
        <td>Id :</td>
        <td>@Model.OrderID</td>
    </tr>
    <tr> 
        <td>Client :</td>
        <td>@Html.ActionLink(@Model.CustomerID, "Details", "Customer", new{ id = Model.CustomerID}, null)</td>
    </tr>
    <tr>
        <td>Employé :</td>
        <td>@Html.ActionLink(""+@Model.EmployeeID, "Details", "Employee", new{ id = Model.EmployeeID}, null)</td>
    </tr>
    <tr>
        <td>Date de commande :</td>
        <td>@Model.OrderDate</td>
    </tr>
    <tr>
        <td>Date requise :</td>
        <td>@Model.RequiredDate</td>
    </tr>
    <tr>
        <td>Date de livraison :</td>
        <td>@Model.ShippedDate</td>
    </tr>
    <tr>
        <td>En passant par :</td>
        <td>@Model.ShipVia</td>
    </tr>
    <tr>
        <td>Expéditeur :</td>
        <td>@Model.ShipName</td>
    </tr>
    <tr>
        <td>Téléphone Expéditeur :</td>
        @*<td>@Model.Shipper.Phone</td>*@
    </tr>
    <tr>
        <td>Fret :</td>
        <td>@Model.Freight</td>
    </tr>
    <tr>
        <td>Adresse de la compagnie :</td>
        <td>@Model.ShipAddress</td>
    </tr>
    <tr>
        <td>Ville de la compagnie :</td>
        <td>@Model.ShipCity</td>
    </tr>
    <tr>
        <td>Region de la compagnie :</td>
        <td>@Model.ShipRegion</td>
    </tr>
    <tr>
        <td>Code postal de la compagnie :</td>
        <td>@Model.ShipPostalCode</td>
    </tr>
    <tr>
        <td>Pays de la compagnie :</td>
        <td>@Model.ShipCountry</td>
    </tr>
</table>
