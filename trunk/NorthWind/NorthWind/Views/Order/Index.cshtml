@using NorthWind.Models
@model List<Order>
@{
    ViewBag.Title = "Index";
}

<h2>Liste des commandes</h2>

<table>

    <tr>
        <th>Numero Commande</th>
        <th>Client</th>
        <th>Employé</th>
        <th>Expéditeur</th>
        <th>Date de Commande</th>
    </tr>
    

    @foreach (Order order in Model)
    {
        
        <tr>
            <td>@Html.ActionLink(@order.OrderID.ToString(), "Details", "Order", new{ id = order.OrderID}, null)</td>
            <td>@Html.ActionLink(@order.Customer.CompanyName.ToString(), "Details", "Customer", new{ id = order.CustomerID}, null)</td>
            <td>@Html.ActionLink(@order.Employee.FirstName+ " " + @order.Employee.LastName, "Details", "Employee", new{ id = order.EmployeeID}, null)</td>
            <td>@order.Shipper.CompanyName</td>
            <td>@order.OrderDate</td>
            <td>@Html.ActionLink("Detail de la commande", "Details", "Order", new{ id = order.OrderID}, null)</td>
        </tr>
        
    }
</table>